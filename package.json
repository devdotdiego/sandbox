{
  "name": "sandbox",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "next": "16.0.0",
      "zod": "^4.1.12",
      "@orpc/server": "^1.10.0",
      "@orpc/client": "^1.10.0",
      "@orpc/openapi": "^1.10.0",
      "@orpc/zod": "^1.10.0",
      "better-auth": "^1.3.28",
      "dotenv": "^17.2.2"
    }
  },
  "scripts": {
    "check": "biome check --write .",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "db:push": "turbo -F @sandbox/db db:push",
    "db:studio": "turbo -F @sandbox/db db:studio",
    "db:generate": "turbo -F @sandbox/db db:generate",
    "db:migrate": "turbo -F @sandbox/db db:migrate"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "turbo": "^2.5.4",
    "@biomejs/biome": "2.3.7",
    "ultracite": "6.3.5",
    "@types/node": "^22.13.11"
  },
  "packageManager": "bun@1.2.17"
}
